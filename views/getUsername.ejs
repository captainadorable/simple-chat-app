<head>
    <title>Get username</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        var redirectTo = '<%= redirectTo %>';
    </script>
</head>
<body>
    <div class="flex flex-col items-center space-y-4 mt-24">
        <div>Get username to join room.</div>
        <div>
            You are joining a room whose id is
            <span class="text-blue-600"><%= redirectTo %></span> .
        </div>

        <form id="form">
            <input
                type="text"
                id="username"
                placeholder="Username"
                class="border border-2 border-black p-2 rounded-md"
            />
            <button>Join room.</button>
        </form>

        <script>
            var form = document.getElementById('form');
            var input = document.getElementById('username');

            form.addEventListener('submit', function (e) {
                e.preventDefault();
                window.location.replace(
                    `${redirectTo}?userName=${input.value}`
                );
            });
        </script>
    </div>
</body>
