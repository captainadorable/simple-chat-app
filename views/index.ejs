<html lang="tr">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <script src="https://cdn.tailwindcss.com"></script>
        <script>const roomId = "<%= roomId %>"; const userName = "<%= userName %>";</script>
        <title>Simple Chat App</title>
    </head>
    <body>
        <div class="flex flex-col items-center mt-24 space-y-4">
            <div class="text-center text-4xl mb-12">Simple chat app!</div>
            <div class="text-center text-2xl">Chat</div>
            <div id="messages" class="flex flex-col border-2 border-black rounded-md w-1/4 px-2">
                <div class="flex flex-row space-x-4" id="message-block">
                    <div id="username">[Server]: </div>
                    <div id="message">Example Message Ustam!</div>
                </div>
            </div>

            <div class="pt-8">
                <form class="flex flex-col items-center space-y-2" id="form">
                    <input type="text" id="input" class="border-2 border-black"></input>
                    <button>Send message!</button>
                </form>
            </div>

            <div class="flex flex-col space-y-4">
                <div class="text-2xl">Share this chat with your friends!</div>
                <input type="text" class="text-center border-2 border-black rounded-md px-2" id="sharelink" value="" readonly>
                <button onclick="navigator.clipboard.writeText(document.getElementById('sharelink').value)">Copy to clipboard!</button>
                <script>document.getElementById('sharelink').value = `${window.location.protocol}//${window.location.host}/${roomId}`</script>
            </div>
        </div>

        <script src="/socket.io/socket.io.js"></script>
        <script src="index.js"></script>
    </body>
</html>
